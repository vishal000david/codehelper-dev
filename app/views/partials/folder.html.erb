<table class="table table-hover table-striped">
      <thead>
        <tr class="sortable">
          <th>File</th>
      <th>Size</th>
      <th>Uploaded to</th>
       
       <th class="text-center"> <td> Actions </td></th>

        </tr>
        </thead>

        <tbody>
    <% @store_list.each do |store| %>
      <tr>
        <td><%=  File.basename(store.upload.path) %>
         </td>
        <td><%= store.upload.size %> bytes</td>
        <td><%= store.folderType %></td>

        <th>
        <td><a href="<%= store.upload %>" download> download </a></td>
        

        <td>
        <%= link_to "Share File", open_share_modal_path(store_id: store.id), remote: true %>
        </td>


        <td><%= link_to 'Show', store %></td>
        <td><%= link_to 'Edit', edit_store_path(store) %></td>
        <td><%= link_to 'Destroy', store, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </th>


      </tr>
    <% end %>
  </tbody>
</table>

<div class="open_share_model">
  <%= render partial: "open_share_modal" %>
</div>
